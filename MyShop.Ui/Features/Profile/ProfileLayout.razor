@using MyShop.Ui.Commen.Headers
@using MyShop.Ui.Commen.Footers
@using MyShop.Ui.Features.Profile.Shared
@inherits LayoutComponentBase

@attribute [Authorize]


<MudRTLProvider RightToLeft="true">
    <MudThemeProvider/>

    @* Provides popover functionality throughout the page *@
    <MudPopoverProvider/>

    @* Needed for handling dialog components across the app *@
    <MudDialogProvider/>

    @* Provides snackbar notifications across the app *@
    <MudSnackbarProvider/>
    <MudLayout class="@PageWrapper">
            @* Main page wrapper layout *@

            <PageHeader/> @* Custom page header component *@
            <HeaderResponsive/> @* Responsive header based on screen size *@

            <MudMainContent class="page-content">

                <MudContainer Class="container">
                    <MudContainer class="row mb-5">
                        <MudContainer
                            class="col-lg-3 col-md-4 mb-md-0 mb-3 sticky-sidebar">
                            <ProfileSideBar/>
                        </MudContainer>
                        <MudContainer class="col-lg-9 col-md-8">

                            @Body


                        </MudContainer>
                        
                        <MudContainer Class="row mb-5">
                            <ProfileBanner/>
                        </MudContainer>
                    </MudContainer>
                </MudContainer>
            </MudMainContent>

            @* Footer section for the profile page *@
            <MainFooter/>
    </MudLayout>

</MudRTLProvider>


@code
{
    private string? PageWrapper { get; set; } = " page-wrapper";

}


