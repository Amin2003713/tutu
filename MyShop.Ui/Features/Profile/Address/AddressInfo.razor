@using Application.User.UserAddress.Responses
        
<div class="col-xl-3 col-lg-4 col-sm-6 mb-3 Text-Color">
    <MudCard Outlined="true" Elevation="@Elevation" >
        <MudCardHeader class="cardHeader">
            <CardHeaderActions>
                <MudRadio                   
                    Placement="Placement.Right"
                    Color="Color.Success"  
                    UncheckedColor="Color.Warning"
                    Size="Size.Small"
                    Value="Address.Id"
                    Dense="true">
                    <MudText
                        Color="Color.Dark"
                        GutterBottom="true"
                        Align="Align.Start">
                        به این آدرس ارسال شود
                    </MudText>
                </MudRadio>
            </CardHeaderActions>
        </MudCardHeader>

        <MudDivider DividerType="DividerType.Middle" class="Address-Divider"/>


        <MudCardContent>
            <MudText Align="Align.Start">
                @Address.FullAddress()
            </MudText>
            <MudText Align="Align.Start">
                <MudIcon Icon="@Icons.Material.Filled.Person"/>
                @Address.ContactName()
            </MudText>
        </MudCardContent>
        <MudCardActions >
            <MudLink Underline="Underline.None" OnClick="EditAddress">
                ویرایش
                <MudIcon Icon="@Icons.Material.Filled.Edit"/>
            </MudLink>        </MudCardActions>
    </MudCard>
</div>
 









@code
{                         
    [Parameter]
    public required AddressDto Address { get; set; } = null!;


    private bool Selected { get; set; }
    [Parameter] public int Elevation { get; set; } = 1;

    protected override void OnParametersSet()
    {

        Selected = Address.ActiveAddress;
    }


    private async Task EditAddress()
    {

    }

    private async Task ToggleChanged(bool arg)
    {
        SnackBar.Add("hii", Severity.Success);
    }
}
