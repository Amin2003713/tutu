
<MudDialog 
    TitleClass="Dialog-Font"
    Style="
    min-width: 25%;
    max-height: 25%;
">
    <DialogContent>
        <MudText Align="Align.Start" Typo="Typo.subtitle2">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel"  Variant="Variant.Outlined">لغو</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">تایید</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string? ContentText { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }

}