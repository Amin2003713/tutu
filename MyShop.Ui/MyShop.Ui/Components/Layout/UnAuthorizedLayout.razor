
@using Microsoft.AspNetCore.Authorization
@using MyShop.Ui.Client.Commen.Footers
@using MyShop.Ui.Client.Commen.Headers
@inherits LayoutComponentBase
 @attribute [AllowAnonymous]

<MudRTLProvider RightToLeft="true">
    @* Required *@
    <MudThemeProvider/>
    <MudPopoverProvider/>
    @* Needed for dialogs *@
    <MudDialogProvider/>
    <SnackBar @ref="SnackBar"/>

    @* Needed for snackbars *@
    <MudSnackbarProvider/>
    <MudLayout class="page-wrapper auth-page-wrapper">
        <MudContainer>
            <MudMainContent class="auth-wrapper page-content">
                <CascadingValue Value="SnackBar" Name="SnackBar">
                    @Body
                </CascadingValue>
            </MudMainContent>
        </MudContainer>
        <MiniFooter/>
    </MudLayout>
</MudRTLProvider>  
 
 
 @code
 {
     public SnackBar  SnackBar { get; set; }
 }

