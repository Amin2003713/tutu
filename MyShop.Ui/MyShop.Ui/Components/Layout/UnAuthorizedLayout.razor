
@using Microsoft.AspNetCore.Authorization
@using MyShop.Ui.Client.Commen.Footers
@inherits LayoutComponentBase
 @attribute [AllowAnonymous]

<MudRTLProvider>
    @* Required *@
    <MudThemeProvider/>
    <MudPopoverProvider/>

    @* Needed for dialogs *@
    <MudDialogProvider/>

    @* Needed for snackbars *@
    <MudSnackbarProvider/>


    <MudLayout class="page-wrapper auth-page-wrapper">
        <MudMainContent class="auth-wrapper page-content">
            @Body
        </MudMainContent>
        <MiniFooter/>
    </MudLayout>
</MudRTLProvider>

