@using MyShop.Ui.Client.Commen.Headers
@using MyShop.Ui.Client.Commen.Footers
@inherits LayoutComponentBase


<MudRTLProvider RightToLeft="true">
    @* Required *@
    <MudThemeProvider/>
    <MudPopoverProvider/>
    @* Needed for dialogs *@
    <MudDialogProvider/>

    @* Needed for snackbars *@
    <MudSnackbarProvider/>
    <MudLayout class="page-wrapper">\
        <PageHeader/>
        <HeaderResponsive/>
        <MudContainer>
            <MudMainContent class="page-content">
                @Body
            </MudMainContent>
        </MudContainer>
        <MiniFooter/>
    </MudLayout>
</MudRTLProvider>