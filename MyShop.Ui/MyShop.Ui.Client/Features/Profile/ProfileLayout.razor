@using MyShop.Ui.Client.Commen.Notifications
@inherits LayoutComponentBase
@attribute [Authorize]
<SnackBar @ref="SnackBar"/>
<MudRTLProvider RightToLeft="true">
    @* Enable Right-To-Left layout for languages like Persian/Arabic *@

    @* Global theme settings for the MudBlazor components *@
    <MudThemeProvider/>

    @* Provides popover functionality throughout the page *@
    <MudPopoverProvider/>

    @* Needed for handling dialog components across the app *@
    <MudDialogProvider/>

    @* Provides snackbar notifications across the app *@
    <MudSnackbarProvider/>

    <MudLayout class="page-wrapper">
        @* Main page wrapper layout *@

        <PageHeader @rendermode="InteractiveWebAssembly"/> @* Custom page header component *@
        <HeaderResponsive @rendermode="InteractiveWebAssembly"/> @* Responsive header based on screen size *@

        <MudMainContent class="page-content">

            <MudContainer Class="container"> @* Replaces <div class="container"> with MudContainer *@

                <MudGrid Class="mb-5" Gutter="true"> @* Replaces <div class="row mb-5"> with MudGrid *@

                    @* Sidebar containing profile navigation options *@
                    <MudItem xs="12" md="4" lg="3"
                             Class="mb-md-0 mb-3 sticky-sidebar"> @* Replaces <div class="col-lg-3 col-md-4"> with MudItem *@
                        <ProfileSideBar/>
                    </MudItem>

                    @* Main content area for profile-related content *@
                    <MudItem xs="12" md="8" lg="9">
                        <MudGrid Class="mb-4"> @* Replaces <div class="row mb-4"> with MudGrid *@
                            <CascadingValue Value="SnackBar" Name="SnackBar">
                                @Body
                            </CascadingValue>
                        </MudGrid>
                    </MudItem>

                </MudGrid>

                @* Profile banner area (e.g., profile picture, name, etc.) *@
                <MudGrid Class="mb-5"> @* Replaces <div class="row mb-5"> with MudGrid *@
                    <ProfileBanner/>
                </MudGrid>

            </MudContainer>
        </MudMainContent>

        @* Footer section for the profile page *@
        <ProfileFooter/>

    </MudLayout>

</MudRTLProvider>

@code
{
    public SnackBar SnackBar { get; set; }
}
