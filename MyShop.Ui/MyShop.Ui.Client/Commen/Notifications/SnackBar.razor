@using Bit.BlazorUI
<BitSnackBar @ref="SnackBarRef"
             Dir="BitDir.Auto"
             Position="@SnackBarPosition"
             AutoDismiss="true"
             AutoDismissTime="@AutoDismissTime"/>

@code {
    private BitSnackBar SnackBarRef = default!;

    [Parameter] public string Title { get; set; } = "This is title";
    [Parameter] public string Body { get; set; } = "This is body";
    [Parameter] public BitSnackBarType SnackBarType { get; set; } = BitSnackBarType.Info;
    [Parameter] public BitSnackBarPosition SnackBarPosition { get; set; } = BitSnackBarPosition.TopLeft;
    [Parameter] public TimeSpan AutoDismissTime { get; set; } = TimeSpan.FromSeconds(3);

    public async Task ShowSnackBar(string? title = null, string? body = null, BitSnackBarType? type = null, BitSnackBarPosition? position = null, TimeSpan? dismissTime = null)
    {
        Title = title ?? Title;
        Body = body ?? Body;
        SnackBarType = type ?? SnackBarType;
        SnackBarPosition = position ?? SnackBarPosition;
        AutoDismissTime = dismissTime ?? AutoDismissTime;

        await SnackBarRef.Show(Title, Body, SnackBarType);
    }

}