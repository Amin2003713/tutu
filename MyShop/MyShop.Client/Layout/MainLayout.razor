
@using Microsoft.AspNetCore.Authorization
@using MyShop.Client.Commen.Headers
@using MyShop.Client.Commen.Footers
@using MyShop.Client.Commen.Notifications
@inherits LayoutComponentBase 
@attribute [Authorize]


<MudRTLProvider RightToLeft="true">
    @* Required *@
    <MudThemeProvider/>
    <MudPopoverProvider/>
    @* Needed for dialogs *@
    <MudDialogProvider/>

    @* Needed for snackbars *@
    <MudSnackbarProvider/>
    <MudLayout class="page-wrapper">
        <PageHeader/>
        <HeaderResponsive/>
        <MudContainer>
            <MudMainContent class="page-content">
                    @Body
            </MudMainContent>
        </MudContainer>
        <MiniFooter/>
    </MudLayout>
</MudRTLProvider>
